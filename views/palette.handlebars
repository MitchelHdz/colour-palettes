<div id="palette-container">
  <h1 class="zoom-in">Your Colour Palette</h1>
  <ul>
    {{#each colours}}
      <li>
        <svg width="100" height="100">
          <circle r="50" cx="50" cy="50" fill="{{this}}"></circle>
          <!-- <text class="colour-label" x="50%" y="50%" text-anchor="middle">{{this}}</text> -->
        </svg>
      </li>
    {{/each}}
  </ul>
  <div class="fade-in" id="back-container">
    <a href="/">Make a new one</a>
  </div>

  <script>
  // POP POP POP...
  (function(){
    Array.from(document.getElementsByTagName('svg')).forEach(function (item, index) {
      setTimeout(function () {
        item.classList.add('visible');
      }, 100 * index);
    });
  })();
  </script>
</div>
